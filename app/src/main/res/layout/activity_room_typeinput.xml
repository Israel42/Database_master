<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical"
    tools:context=".RoomTypeinput">


    <ImageView
        android:id="@+id/room_image_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/image_background"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        />
    <EditText
        android:id="@+id/room_type_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="RoomType"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:inputType="text"
        />
   <EditText
       android:id="@+id/room_size_input"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:hint="How many rooms are there?"
       android:textAlignment="center"
       android:layout_gravity="center"
       android:inputType="number"/>
    <Button
        android:id="@+id/room_info_upload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Upload info"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        />
</LinearLayout>